pkgname=pwgen
pkgver=0.1.0
pkgrel=1
pkgdesc="Word-based password generator"
arch=('any')
license=('GPL3')
depends=('python' 'python-docopt' 'hunspell-en_US')
makedepends=()
source=('pwgen' 'dict/words.txt')
md5sums=('SKIP' 'SKIP')

package() {
  mkdir -p "$pkgdir/usr/bin"
  mkdir -p "$pkgdir/usr/pwgen"
  cp pwgen "$pkgdir/usr/bin"
  cp words.txt "$pkgdir/usr/bin"
  chmod +rx "$pkgdir/usr/bin/pwgen"
}
