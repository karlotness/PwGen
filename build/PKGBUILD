pkgname=pwgen
pkgver=0.1.0
pkgrel=1
pkgdesc="Word-based password generator"
arch=('any')
license=('GPL3')
depends=('python' 'python-docopt')
makedepends=()
source=("$pkgname"::'git+ssh://git@github.com/karlotness/PwGen')
md5sums=('SKIP')

build() {
  cd pwgen
  make
}

package() {
  cd pwgen
  BINPREFIX="$pkgdir/usr/bin" RESPREFIX="$pkgdir/usr/share/pwgen" make install
}
