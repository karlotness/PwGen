pkgname=kpwgen
pkgver=0.1.0
pkgrel=1
pkgdesc="Word-based password generator"
arch=('any')
license=('GPL3')
depends=('python' 'python-docopt')
makedepends=('words')
source=("$pkgname"::'git+ssh://git@github.com/karlotness/PwGen')
md5sums=('SKIP')

build() {
  cd kpwgen
  make
}

package() {
  cd kpwgen
  BINPREFIX="$pkgdir/usr/bin" RESPREFIX="$pkgdir/usr/share/kpwgen" make install
}
