pkgname=kpwgen
pkgver=0.1.0
pkgrel=1
pkgdesc="Word-based password generator"
arch=('any')
license=('GPL3')
depends=('python')
source=('kpwgen.tar.gz')
md5sums=('SKIP')

build() {
  cd kpwgen
  make
}

package() {
  cd kpwgen
  BINPREFIX="$pkgdir/usr/bin" RESPREFIX="$pkgdir/usr/share" make install
}
